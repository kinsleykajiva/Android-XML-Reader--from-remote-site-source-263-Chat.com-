<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:elevation="8dp"
        android:padding="1dp">

        <TextView
            android:id="@+id/news_title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contrary to popular belief, Lorem Ipsum is not simply random text"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/news_description3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_title3"
            android:layout_marginTop="2dp"
            android:text="There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form..."
            android:textSize="13dp" />

        <TextView
            android:id="@+id/news_time3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_description3"
            android:layout_marginTop="2dp"
            android:text="3 day ago"
            android:textSize="12dp"
            android:textStyle="bold" />

       <!-- <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/news_title3"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_cc" />-->

    </RelativeLayout>
</LinearLayout>